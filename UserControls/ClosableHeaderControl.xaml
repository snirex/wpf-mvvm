<UserControl x:Class="MDClone.UserControls.ClosableHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDClone.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="23" >
    <StackPanel Orientation="Horizontal">
        <Label Content="TabItem"  Height="23" HorizontalAlignment="Left"  Name="label_TabTitle" VerticalAlignment="Top" FontFamily="Courier" FontSize="12" />
        <Button Content="X"  Height="19"  Name="button_close" VerticalAlignment="Top" Width="20" FontWeight="Bold" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"  FontSize="14" Padding="0" ToolTip="Close"/>
    </StackPanel>
</UserControl>
